package hearingjframetest;


import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;


public class PanelTwo extends JFrame
{
    static JLabel header;  // JLabel for the header of the window
    static JButton start; // JButton to start the test
    static JPanel panel; //JPanel container
    public PanelTwo()
    {
        super ("Hearing Test");
        
        panel = new JPanel();

        setLayout(new FlowLayout());
        
       
       
        header = new JLabel ( "Change your volume to 50% of the computer's maximum volume." );
        header.setFont(new Font ("Cooper", Font.ROMAN_BASELINE, 24));
        header.setForeground(Color.BLACK);
        header.setSize(400, 100);

       
        start = new JButton ("START");
        start.setSize(400,400);
        start.setFont(new Font ("Comic Sans", Font.BOLD, 18));
       
        //DButtonHandler is a temporary name until we have the name of the button sorted
        DButtonHandler bhandler = new DButtonHandler();
        start.addActionListener( bhandler );
       
        start.setPreferredSize(null);
        header.setPreferredSize(null);  
       
        add ( header );
        add ( start );          
    }//end paneltwo constructor

}//end class paneltwo

class DButtonHandler implements ActionListener
{
    public void actionPerformed( ActionEvent event )
    {
        System.out.println("You have pressed button on panel two");
    }
}
