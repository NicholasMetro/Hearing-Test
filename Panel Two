package HearingTest;


import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;


public class PanelTwo extends JFrame
{
    static JLabel prompt;  
    static JButton done; 
    static JPanel panel; 
    
    public PanelTwo()
    {
        super ("Hearing Test");
        
        panel = new JPanel();

        setLayout(new FlowLayout());
        
       
       
        prompt = new JLabel ( "Change your volume to 50% of the computer's maximum volume." );
        prompt.setFont(new Font ("Cooper", Font.ROMAN_BASELINE, 16));
        
        

       
        done = new JButton ("DONE");
        done.setFont(new Font ("", Font.BOLD, 16));
       
        //DButtonHandler is a temporary name until we have the name of the button sorted
        DButtonHandler bhandler = new DButtonHandler();
        done.addActionListener( bhandler );
       
        done.setPreferredSize(null);
        prompt.setPreferredSize(null);  
       
        add ( prompt );
        add ( done );          
    }//end paneltwo constructor
}//end class paneltwo

class DButtonHandler implements ActionListener
{
    public void actionPerformed( ActionEvent event )
    {
        System.out.println("You have pressed button on panel two");
    }//end actionPerformed method
    
}//end DButtonHandler class
